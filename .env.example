# TiMi Configuration
# Copy this file to .env and fill in your actual values

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Exchange API Keys
# Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here
BINANCE_TESTNET=true  # Set to false for production

# CME (if using)
CME_API_KEY=your_cme_api_key_here
CME_API_SECRET=your_cme_secret_here

# Database
DATABASE_URL=sqlite:///./timi.db

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_MONITORING=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/timi.log

# Safety Settings
MAX_TOTAL_CAPITAL=10000  # Maximum total capital to deploy
MAX_POSITION_SIZE=1000   # Maximum single position size
EMERGENCY_STOP=false     # Emergency stop all trading
PAPER_TRADING_MODE=true  # Start in paper trading mode

# Alerts (optional)
ALERT_EMAIL=
ALERT_WEBHOOK_URL=
